<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
      <layout class="ch.qos.logback.classic.PatternLayout">
        <pattern>%cyan(%d{HH:mm:ss}) %highlight(%5p) %blue(%5t) %yellow(---) %magenta([%15.15t]) %green(%-40.40logger{39}) %cyan(:) %msg%n
        </pattern>
      </layout>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
  </root>

  <!-- Logger específico para tu aplicación -->
  <logger name="com.joalvarezdev.simple-example-api" level="DEBUG" additivity="false">
    <appender-ref ref="CONSOLE"/>
  </logger>
</configuration>